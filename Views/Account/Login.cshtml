@model GiftOfTheGivers.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    ViewData["HideHeader"] = true;
    ViewData["HideFooter"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/log.css" />
}

<div class="login-container">
    <h2>Login</h2>

    <!-- This will now display with proper styling -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Enter email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <div class="form-group">
            <a asp-action="Register">Don't have an account? Register here.</a>
        </div>
        <a href="@Url.Action("Login", "AdminAuth")" class="btn btn-outline-primary">
            🔐 Admin Login
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
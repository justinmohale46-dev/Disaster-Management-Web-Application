@model List<Message>

@{
    ViewData["Title"] = "My Messages";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>💬 My Messages</h1>
        <a href="/Volunteer/Hub" class="btn btn-secondary">← Back to Hub</a>
    </div>

    <!-- Send Message to Admin -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">📨 Message Admin Team</h5>
        </div>
        <div class="card-body">
            <form asp-action="SendToAdmin" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Subject</label>
                    <input name="subject" class="form-control" placeholder="What is this about?" required />
                </div>

                <div class="form-group">
                    <label>Message</label>
                    <textarea name="content" class="form-control" rows="4"
                              placeholder="Type your message to the admin team..." required></textarea>
                </div>

                <button type="submit" class="btn btn-success">
                    📤 Send to Admin
                </button>
            </form>
        </div>
    </div>

    <!-- Admin Broadcasts -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">📢 Admin Announcements</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted">No announcements yet.</p>
            }
            else
            {
                foreach (var message in Model)
                {
                    <div class="border-left border-warning pl-3 mb-3">
                        <h6 class="text-warning">@message.Subject</h6>
                        <p class="mb-1">@message.Content</p>
                        <small class="text-muted">
                            📅 @message.SentDate.ToString("MMM dd, yyyy 'at' HH:mm")
                        </small>
                    </div>
                }
            }
        </div>
    </div>
</div>
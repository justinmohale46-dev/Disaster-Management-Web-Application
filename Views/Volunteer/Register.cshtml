@model GiftOfTheGivers.ViewModels.VolunteerRegistrationViewModel

@{
    ViewData["Title"] = "Become a Volunteer";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">🤝 Join Our Volunteer Team</h2>
                </div>
                <div class="card-body">
                    <p class="text-muted">Thank you for your interest in volunteering with Gift of the Givers! Please fill in your details below.</p>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <form asp-action="Register" method="post">
                       

                        <h4 class="mt-4">Contact Details</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="083 123 4567" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EmergencyContact"></label>
                                    <input asp-for="EmergencyContact" class="form-control" placeholder="Emergency contact name" />
                                    <span asp-validation-for="EmergencyContact" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EmergencyContactPhone"></label>
                                    <input asp-for="EmergencyContactPhone" class="form-control" placeholder="083 123 4567" />
                                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <h4 class="mt-4">Skills & Experience</h4>
                        <div class="form-group">
                            <label asp-for="SelectedSkills">What skills do you have? *</label>
                            <div class="row">
                                @foreach (var skill in Model.SkillOptions)
                                {
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="SelectedSkills" value="@skill" id="skill-@skill" />
                                            <label class="form-check-label" for="skill-@skill">@skill</label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="SelectedSkills" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PreviousExperience"></label>
                            <textarea asp-for="PreviousExperience" class="form-control" rows="3"
                                      placeholder="Describe any previous volunteer experience..."></textarea>
                        </div>

                        <h4 class="mt-4">Availability & Preferences</h4>
                        <div class="form-group">
                            <label asp-for="Availability">When are you available to volunteer? *</label>
                            <select asp-for="Availability" class="form-control">
                                <option value="">-- Select Availability --</option>
                                @foreach (var option in Model.AvailabilityOptions)
                                {
                                    <option value="@option">@option</option>
                                }
                            </select>
                            <span asp-validation-for="Availability" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SelectedTaskTypes">What type of tasks interest you? *</label>
                            <div class="row">
                                @foreach (var taskType in Model.TaskTypeOptions)
                                {
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="SelectedTaskTypes" value="@taskType" id="type-@taskType" />
                                            <label class="form-check-label" for="type-@taskType">@taskType</label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="SelectedTaskTypes" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                🤝 Join Volunteer Team
                            </button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model GiftOfTheGivers.Models.Donation

@{
    ViewData["Title"] = "Donation Receipt";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Donation Receipt</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .header { text-align: center; border-bottom: 2px solid #333; padding-bottom: 10px; margin-bottom: 20px; }
        .section { margin-bottom: 15px; }
        .label { font-weight: bold; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Gift of the Givers Foundation</h1>
        <h2>Donation Receipt</h2>
    </div>

    <div class="section">
        <p><span class="label">Receipt #:</span> D-@Model.DonationID.ToString("D5")</p>
        <p><span class="label">Date:</span> @Model.DonationDate.ToString("MMMM dd, yyyy")</p>
        <p><span class="label">Status:</span> @Model.Status</p>
    </div>

    <div class="section">
        <h3>Donation Details</h3>
        <p><span class="label">Resource Type:</span> @Model.ResourceType</p>
        <p><span class="label">Quantity:</span> @Model.Quantity items</p>
        <p><span class="label">Description:</span> @Model.Description</p>
        <p><span class="label">Condition:</span> @Model.Condition</p>
    </div>

    
    </div>

    <div class="section" style="margin-top: 40px; text-align: center;">
        <p><em>Thank you for your generous donation!</em></p>
        <p>Gift of the Givers Foundation</p>
    </div>
</body>
</html>
@model GiftOfTheGivers.ViewModels.DonationHistoryViewModel

@{
    ViewData["Title"] = "My Donation History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>📊 Quick Stats</h5>
                </div>
                <div class="card-body">
                    <p><strong>Total Donations:</strong> @Model.TotalDonations</p>
                    <p><span class="badge badge-warning">Pending: @Model.PendingCount</span></p>
                    <p><span class="badge badge-info">Approved: @Model.ApprovedCount</span></p>
                    <p><span class="badge badge-primary">Received: @Model.ReceivedCount</span></p>
                    <p><span class="badge badge-success">Distributed: @Model.DistributedCount</span></p>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5>🔍 Filters</h5>
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="form-group">
                            <label>Status</label>
                            <select name="status" class="form-control" onchange="this.form.submit()">
                                @foreach (var status in Model.StatusOptions)
                                {
                                    <option value="@status" selected="@(Model.SelectedStatus == status)">@status</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Resource Type</label>
                            <select name="resourceType" class="form-control" onchange="this.form.submit()">
                                @foreach (var type in Model.ResourceTypeOptions)
                                {
                                    <option value="@type" selected="@(Model.SelectedResourceType == type)">@type</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>From Date</label>
                            <input type="date" name="startDate" class="form-control" value="@Model.StartDate?.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
                        </div>

                        <div class="form-group">
                            <label>To Date</label>
                            <input type="date" name="endDate" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-sm">Apply Filters</button>
                        <a href="@Url.Action("DonationHistory")" class="btn btn-secondary btn-sm">Clear All</a>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>My Donation History</h2>
                <div>
                    <a href="@Url.Action("Donate")" class="btn btn-primary mr-2">
                        ➕ Make New Donation
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            @if (!Model.Donations.Any())
            {
                <div class="alert alert-info">
                    <h4>No donations found</h4>
                    <p>You haven't made any donations yet, or no donations match your current filters.</p>
                    <a href="@Url.Action("Donate")" class="btn btn-primary">Make Your First Donation</a>
                </div>
            }
            else
            {
                foreach (var donation in Model.Donations)
                {
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Donation #D-@donation.DonationID.ToString("D5")</h5>
                            <span class="badge @GetStatusBadgeClass(donation.Status)">@donation.Status</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Date:</strong> @donation.DonationDate.ToString("MMM dd, yyyy")</p>
                                    <p><strong>Resource:</strong> @donation.ResourceType</p>
                                    <p><strong>Quantity:</strong> @donation.Quantity items</p>
                                    <p><strong>Condition:</strong> @donation.Condition</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Delivery:</strong> @donation.DeliveryMethod</p>
                                    <p><strong>Description:</strong> @donation.Description</p>
                                </div>
                            </div>
                            
                           
                            
                            
                                
                                <div class="mt-2">
                                <a href="@Url.Action("DownloadDonationReceipt", new { id = donation.DonationID })"
                                   class="btn btn-success btn-sm">
                                    📄 Download Receipt
                                </a>
                                    @if (donation.Status == "Pending")
                                    {
                                        <form asp-action="CancelDonation" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@donation.DonationID" />
                                            <button type="submit" class="btn btn-warning btn-sm" 
                                                    onclick="return confirm('Are you sure you want to cancel this donation?')">
                                                Cancel Donation
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleDetails(donationId) {
            const detailsDiv = document.getElementById('details-' + donationId);
            if (detailsDiv.style.display === 'none') {
                detailsDiv.style.display = 'block';
            } else {
                detailsDiv.style.display = 'none';
            }
        }
    </script>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "badge-warning",
            "Approved" => "badge-info",
            "Scheduled" => "badge-primary",
            "Received" => "badge-primary",
            "Distributed" => "badge-success",
            "Cancelled" => "badge-danger",
            _ => "badge-secondary"
        };
    }
}
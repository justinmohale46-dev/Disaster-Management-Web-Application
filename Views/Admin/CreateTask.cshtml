@model VolunteerTask

@{
    ViewData["Title"] = "Create Volunteer Task";
    var availableDisasters = ViewBag.AvailableDisasters as List<DisasterReport> ?? new List<DisasterReport>();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>📋 Create Volunteer Task</h1>
        <a href="/Admin/Dashboard" class="btn btn-secondary">← Back to Dashboard</a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Task Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateTask" method="post">
                        @Html.AntiForgeryToken()

                      

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title">Task Title *</label>
                                    <input asp-for="Title" class="form-control" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Category">Category *</label>
                                    <select asp-for="Category" class="form-control" required>
                                        <option value="">Select Category</option>
                                        <option value="Distribution">Food Distribution</option>
                                        <option value="Medical">Medical Assistance</option>
                                        <option value="Logistics">Logistics</option>
                                        <option value="Construction">Construction</option>
                                        <option value="Admin">Administrative</option>
                                        <option value="Shelter">Shelter Management</option>
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Description *</label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Location">Location *</label>
                                    <input asp-for="Location" class="form-control" required />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="RequiredSkills">Required Skills</label>
                                    <input asp-for="RequiredSkills" class="form-control" placeholder="First Aid, Driving, Construction, etc." />
                                    <small class="form-text text-muted">Separate skills with commas</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TaskDate">Task Date *</label>
                                    <input asp-for="TaskDate" type="datetime-local" class="form-control" required />
                                    <span asp-validation-for="TaskDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DurationHours">Duration (Hours) *</label>
                                    <input asp-for="DurationHours" type="number" class="form-control" min="1" max="24" required />
                                    <span asp-validation-for="DurationHours" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="VolunteersNeeded">Volunteers Needed *</label>
                                    <input asp-for="VolunteersNeeded" type="number" class="form-control" min="1" max="100" required />
                                    <span asp-validation-for="VolunteersNeeded" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-lg">
                                🚀 Create Volunteer Task
                            </button>
                            <a href="/Admin/Dashboard" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Quick Tips Sidebar -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">💡 Quick Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li>✅ Be specific about location and timing</li>
                        <li>✅ List required skills clearly</li>
                        <li>✅ Match volunteers needed to task complexity</li>
                        <li>✅ Link to disaster reports when relevant</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}